<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#BADFEF"
    android:layout_margin="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/text_margin"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2">
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
   android:layout_weight="1.5"
    android:orientation="vertical"
    android:gravity="center_vertical">
<TextView
    android:id="@+id/teacherName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Prince Saroha "
    android:fontFamily="@string/bold"
    android:textColor="#0B0A0A"
    android:textSize="@dimen/title_size"/>
    <TextView
        android:id="@+id/teacherPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Principal "
        android:fontFamily="@string/regular"
        android:textColor="#0B0A0A"
        android:textSize="@dimen/title_size"/>
    <TextView
        android:id="@+id/teacherEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="princesaroha@yahoo.com "
        android:textColor="#0B0A0A"
        android:fontFamily="@string/regular"
        android:textSize="@dimen/text_size"/>


</LinearLayout>
 <de.hdodenhof.circleimageview.CircleImageView
     android:id="@+id/teacherImage"
     android:layout_width="80dp"
     android:layout_height="120dp"
     android:padding="8dp"
     android:src="@drawable/avtrimg"
     android:layout_gravity="center_horizontal"
     android:layout_weight="0.5"/>






</LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>